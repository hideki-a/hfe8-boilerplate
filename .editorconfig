# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.pug]
indent_size = 2

[*.js]
indent_style = space
indent_size = 4

[{package.json,gulpfile.babel.js,postcss.config.js,.eslintrc}]
indent_style = space
indent_size = 2
